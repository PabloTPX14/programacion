// Secuencia num√©rica de numeros pares.cpp : Defines the entry point for the console application.
//

#include <stdafx.h>
#include <iostream>
#include <conio.h>

using namespace std;

void mostrarValoresDobles (int n)
{
	int i, par=1;
	for (i=0; i<n; i++)
	{
		par=par*2;
		cout << par << " ";
	}
}

int main()
{
 int nros;
 cout<< "Cantidad de numeros pares *2: ";
 cin >> nros;
 mostrarValoresDobles(nros);
 getch();
 return(1);
}
