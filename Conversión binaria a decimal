#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include "math.h"

void main()
{
  printf("\t CAlCULO DE BASE BINARIA A DECIMAL\n");
	printf("\t =================================\n");
	int N, S, exp, dig;
	printf("INGRESE VALOR: \n");
	scanf("%d",&N);
	S=0;
	exp=0;
	while(N>0)
	{
		dig=N%10;
		S=S+pow(2.0,exp)*dig;
		exp=exp+1;
		N=int(N/10);
	}
	printf("\nEl numero en base decimal  es %d;",S);
	getch();
}
