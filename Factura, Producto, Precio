#define NMAX 100

void leervec (int*codigo[], float*precio[], int*cantidad[])
void totalpago (float precio[], int cantidad, float*total)
void mostrarvec(int codigo[], float precio[], int cantidad[])
void main()
{
int n, codigo[NMAX], cantidad[NMAX], float precio[NMAX], total, char cliente[50];
printf("--------FACTURA--------");
printf("Nombre Cliente");
scanf("%c", &Cliente[50]);
printf("cantidad de productos: );
