void leervec (int*codigo[], float*precio[], int*cantidad[])
{
int i;
for (i=0; i n; i++)
    {
    printf("Codigo: ");
    scanf("%d", &codigo[i]);
    printf("Precio: ");
    scanf("%f", &precio[i]);
    printf("Cantidad: );
    scanf("%d", &cantidad[i]);
    }
}
void totalpago (float precio[], int cantidad, float*total)
{
int i;
float*total=0;
for (i=0; i n; i++)
    {
    *total=*total+(precio[i]+cantidad[i]);
    }
}
mostrarvec(in codigo[NMAX], float precio[NMAX], int cantidad[NMAX]);
{
int i;
for (i=0; i n; i++)
    {
    printf("%d","%f","%d", codigo[i], precio[i], cantidad[i]);
    }
}
