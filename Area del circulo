#include "stdafx.h"
#include "stdio.h"
#include "conio.h"

void main()
{
  int radio;
	float area;
	printf("\n----Area del Circulo---");
	printf("\nIngrese el radio:");
	scanf("%d",&radio);
	area=(3.1416*radio*radio);
	printf("\nEl area del circulo es %f",area);
	getch();
}
