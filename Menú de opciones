// Operaciones Aritm√©ticas.cpp : Defines the entry point for the console application.
//
#include "conio.h"
#include "stdafx.h"
float suma(int a, int b)
{float t;
t=a+b;
return t;
}
float resta(int a, int b)
{float t;
t=a-b;
return t;
}
void menu()
{
  printf("M E N U");
	printf("\n 1.SUMA");
	printf("\n 2.RESTA");
	printf("\n 3.MULTIPLICACION");
	printf("\n 4.DIVISION");
	printf("\n 5.SALIR");
	printf("\nElegir una opcion");
}
void main()
{int a,b, op=0;
float s=0, r=0, m=0, d=0;
do{
	printf("A: ");
	scanf("%d", &a);
	printf("\nB:");
	scanf("%d", &b);
	menu();
	scanf("%d", &op);
	switch(op)
	{  case 1: s=suma(a,b);
	   printf("S: %.1f", s);
	   break;
	   case 2: r=resta(a,b);
	   printf("R:%.1f", r); 
	   break;
	   case 3: m=(a,b);
	   printf("M:%.1f", m); 
	   break;
	   case 4:if (b!=0)
			  {d=(a/b);
	          printf("D:%.1f", d);
			  }
			  else printf("\n ERROR");
			  break;
   	 default: break;
	}
}while(op!=5);
}
